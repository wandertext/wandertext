<article
  class="{{if @fullScreen "map-full-screen"}} bg-columbiaBlueLight">
  {{#if @defaultModalOpen}}
    <div 
    class="hidden"
    {{did-insert (fn this.openDefaultModal @modalContentComponent)}}
    />
  {{/if}}
  <LeafletMap class="h-full" @lat={{this.lat}} @lng={{this.lng}} @zoom={{this.zoom}} as |layers|>

    <layers.tile @url="https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png" />

  </LeafletMap>
</article>
