<article
  class="{{if @fullScreen "map-full-screen"}} bg-columbiaBlueLight">
  {{#if @defaultModalOpen}}
    <div 
    class="hidden"
    {{did-insert (fn this.openDefaultModal @modalContentComponent)}}
    />
  {{/if}}
  <LeafletMap 
    class="h-full" 
    @lat={{this.lat}} 
    @lng={{this.lng}} 
    @zoom={{this.zoom}} 
    @onZoomend={{this.updateZoom}}
    as |layers|>

    {{#if (lte this.zoom 8)}}
      <layers.tile @url="https://server.arcgisonline.com/ArcGIS/rest/services/World_Physical_Map/MapServer/tile/{z}/{y}/{x}" />
    {{else}}
      <layers.tile @url="https://tiles.stadiamaps.com/tiles/alidade_smooth/{z}/{x}/{y}{r}.png" />
    {{/if}}

  </LeafletMap>
</article>
