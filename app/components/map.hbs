{{#if @fullScreen}}
  <article
    class="{{if @fullScreen "h-full w-full"}} text-primary bg-columbiaBlueLight">
    {{#if @defaultModalOpen}}
      <div 
      class="hidden"
      {{did-insert (fn this.openDefaultModal @modalContentComponent)}}
      />
    {{/if}}
    <Map::LeafletContainer 
      @lat={{this.lat}} @lng={{this.lng}} 
      @markers={{this.markers}}
      @showAttribution={{true}}
    />
  </article>
{{else}}
    <Map::LeafletContainer 
      @lat={{this.lat}} 
      @lng={{this.lng}}
      @markers={{@markers}}
    />
{{/if}}

