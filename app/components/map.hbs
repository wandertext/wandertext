{{#if @fullScreen}}
  <article
    class="{{if @fullScreen "h-full w-full"}} text-primary bg-columbiaBlueLight">
    {{#if @defaultModalOpen}}
      <div 
      class="hidden"
      {{did-insert (fn this.openDefaultModal @modalContentComponent)}}
      />
    {{/if}}
    <Map::LeafletContainer @lat={{this.lat}} @lng={{this.lng}} @showAttribution={{true}} />
  </article>
{{else}}
    <Map::LeafletContainer @lat={{this.lat}} @lng={{this.lng}} />
{{/if}}

