{{#if @fullScreen}}
  <article
    class="{{if @fullScreen "h-full w-full"}} text-primary bg-columbiaBlueLight" data-test-map-full-screen>
    {{#if @defaultModalOpen}}
      <div 
      class="hidden"
      {{open-modal @modalContentComponent}}
      />
    {{/if}}
    <Map::LeafletContainer 
      @lat={{this.lat}} @lng={{this.lng}} 
      @markers={{@markers}}
      @showAttribution={{true}}
    />
  </article>
{{else}}
    <Map::LeafletContainer 
      @lat={{this.lat}} 
      @lng={{this.lng}}
      @markers={{@markers}}
    />
{{/if}}

