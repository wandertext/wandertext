<div class="h-full flex flex-row space-x-2 items-center">
  {{#if @model.imgSrc}}
    <img src={{@model.imgSrc}} class="h-full w-auto" alt="cover of {{@model.name}}"/>
  {{/if}}

  {{#if @model.markdownName}}
    <span class="truncate prose prose-p:text-3xl prose-p:truncate">
      {{markdown-to-html 
        markdown=@model.markdownName 
      }}
    </span>
  {{else}}
    <span class="text-3xl truncate">
     {{@model.name}}
    </span>
  {{/if}} 
</div>
