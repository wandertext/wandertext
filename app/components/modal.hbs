<section class="modal">
  <header class="flex flex-row justify-between">
    <h2 class="text-2xl">
      {{if @header @header "header"}}
    </h2>
    <CloseButton 
      @onClick={{@close}}
      @ariaLabel="Close menu"
      />
  </header>
  {{yield}}
  <footer>
    <button type="button" {{on "click" @close}}>Close</button>
  </footer>
</section>
