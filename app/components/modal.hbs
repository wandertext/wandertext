<section class="modal">
  <header class="flex flex-row justify-between">
    <h2 class="text-2xl">
      {{if @header @header "header"}}
    </h2>
    <button type="button" {{on "click" @close }}>
      <Icon @icon="close" @role="button"/>
    </button>
  </header>
  {{yield}}
  <footer>
    <button type="button" {{on "click" @close}}>Close</button>
  </footer>
</section>
