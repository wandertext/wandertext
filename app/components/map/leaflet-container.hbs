<LeafletMap 
  class="h-full" 
  @lat={{@lat}} 
  @lng={{@lng}} 
  @zoom={{this.zoom}} 
  @onZoom={{this.updateZoom}}
  @onLoad={{this.onLoad}}
  as |layers|>

  {{#if (lte this.zoom 8)}}
    <layers.tile 
      @url={{this.tiles.esriPhysical.url}}
      />
  {{else}}
    <layers.tile 
      @url={{this.tiles.openStreetMapMapnik.url}}
    />
  {{/if}}

  {{#each @markers as |marker|}}
    <layers.marker 
      @lat={{marker.latitude}} 
      @lng={{marker.longitude}} 
      />
  {{/each}}
    

  {{yield}}

</LeafletMap>
